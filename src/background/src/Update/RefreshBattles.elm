module Update.RefreshBattles exposing (apply_to)

-- Elm -------------------------------------------------------------------------
import Array

-- Extension -------------------------------------------------------------------
import Comm.GetBattles

import Struct.Event
import Struct.Model

--------------------------------------------------------------------------------
-- LOCAL -----------------------------------------------------------------------
--------------------------------------------------------------------------------

--------------------------------------------------------------------------------
-- EXPORTED --------------------------------------------------------------------
--------------------------------------------------------------------------------
apply_to : Struct.Model.Type -> (Struct.Model.Type, (Cmd Struct.Event.Type))
apply_to model =
   (
      model,
      (Cmd.batch
         (Array.toList
            (Array.indexedMap
               (Comm.GetBattles.request)
               model.players
            )
         )
      )
   )
